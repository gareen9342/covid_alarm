{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "baseUrl": "./",
    "outDir": "build",
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "es6",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "types": [
      "node"
    ]
    //    "typeRoots": [
    //      "./types/*.d.ts",
    //      "./node_modules/@types"
    //    ]
  },
  "include": [
    "./**/*.d.ts"
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}