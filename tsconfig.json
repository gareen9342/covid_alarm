{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": "./",
    "outDir": "dist",
    "rootDir": ".",
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "es6",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "mocha"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/",
      "./types/*.d.ts"
    ],
    "strictPropertyInitialization": false,
    "lib": ["DOM.Iterable"]
  },
  "include": [
    "*.ts",
    "./**/*.ts"
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}